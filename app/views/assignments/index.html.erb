<h1>Listing Assignments</h1>

<table>

    <% @assignments.each do |assignment| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
			<dl>
				<dt><%= link_to assignment.title, assignment %></dt>
				<dd><%= assignment.description %></dd>
			</dl>
		</td>
        <td class = "list_dates">
			<dt>Open - Close Dates:</dt>
			<dates>
				<%= assignment.open %> - <%= assignment.close %>
			</dates>
		</td>
        <td class="list_actions">
			<%= link_to 'Edit', edit_assignment_path(assignment) %><br>
			<%= link_to 'Delete', assignment, method: :delete, data: { confirm: 'Are you sure?' } %><br>
		</td>
      </tr>
    <% end %>

</table>

<br>

